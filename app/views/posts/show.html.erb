<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<%= @post.author.email if @post.author %>
<%= action_links %>

<h3>Replys:</h3>
<ul>
	<% @pages.each do |reply|%>
	<li>
	<strong> <%= reply.author.try(:email) or "Anonymous" %>:</strong>
	</li>
	<% end -%>

</ul>
	<center class = "centers"><%= paginate @pages %></center>
	<%= form_for Reply.new, url: reply_post_path do |f|%>

	<%= f.text_area :body %>
	<%= f.submit %>

	<% end -%>	
