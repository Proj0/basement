<h2>编辑用户信息</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
<div class="container">
  <div class="field">
    电子邮件<br />
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>等待<%= resource.unconfirmed_email %>确认电子邮件地址。</div>
  <% end %>

  <div class="field">
    新密码（不修改请留空）<br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control'%>
  </div>

  <div class="field">
    确认新密码<br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="field">
    原密码<br />
    <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "更新用户信息", class: 'btn btn-primary' %>
  </div>
<% end %>
</div>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "注销我的账号", registration_path(resource_name), data: { confirm: "你确定吗？" }, method: :delete, class: 'btn btn-primary'%></p>

<%= link_to "返回", :back, class: 'btn btn-default' %>
